---
// src/components/Team.astro - Team section highlighting Sam and Americo.
const { setmoreUrl } = Astro.props;

const members = [
  {
    name: "Sam",
    role: "Fundador / Barbero",
    bio: "El ojo detrás del estilo Alvarez Barber. Cortes con carácter y acabados limpios, sin prisa y con precisión.",
    badges: [
      "Corte clásico y moderno",
      "Detalle con tijera",
      "Atención directa",
    ],
    image: "/team-sam-main.png",
    alt: "Sam — Fundador / Barbero en Alvarez Barber",
  },
  {
    name: "Américo",
    role: "Barbero / Mano derecha",
    bio: "Ritmo firme y manos seguras. Desvanecidos pulidos, barba con forma y consistencia en cada cita.",
    badges: ["Desvanecidos limpios", "Perfilado de barba", "Consistencia"],
    image: "/team-americo.jpg",
    alt: "Américo — Barbero / Mano derecha en Alvarez Barber",
  },
];
---

<section id="equipo" class="section">
  <div class="container space-y-8">
    <div class="space-y-2">
      <img
        src="/brand/alvarez-mark-gold.svg"
        alt="Alvarez Barber"
        class="h-8 w-auto"
        loading="lazy"
      />
      <h2 class="font-heading text-3xl uppercase tracking-[0.2em]">
        El equipo
      </h2>
      <p class="text-ash">
        Dos barberos, un mismo estándar: precisión, limpieza y trato directo.
      </p>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
      {
        members.map((member, index) => (
          <article
            class="card flex flex-col gap-5 reveal"
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <div class="overflow-hidden border border-gold/20 bg-[linear-gradient(135deg,_rgba(11,11,11,0.85),_rgba(27,27,27,0.9))]">
              <img
                src={member.image}
                alt={member.alt}
                width="1024"
                height="1536"
                class="h-auto w-full object-contain"
                loading="lazy"
                decoding="async"
              />
            </div>

            <div class="space-y-3">
              <div>
                <h3 class="text-xl font-semibold text-bone">{member.name}</h3>
                <p class="text-xs uppercase tracking-[0.3em] text-goldLight">
                  {member.role}
                </p>
              </div>
              <p class="text-sm text-ash">{member.bio}</p>
              <div class="flex flex-wrap gap-2">
                {member.badges.map((badge) => (
                  <span class="chip text-[0.6rem]">{badge}</span>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div
      class="flex flex-col gap-3 border border-gold/20 bg-coal/70 p-5 sm:flex-row sm:items-center sm:justify-between"
    >
      <p class="text-sm uppercase tracking-[0.2em] text-ash">
        Agenda con el equipo
      </p>
      <a
        class="btn btn-primary text-xs"
        href={setmoreUrl}
        target="_blank"
        rel="noreferrer">Agendar cita</a
      >
    </div>
  </div>
</section>
