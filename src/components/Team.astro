---
// src/components/Team.astro
const { setmoreUrl } = Astro.props;

const members = [
  {
    name: 'Diego',
    role: 'Fundador / Barbero',
    image: '/team-diego.jpg',
  },
  {
    name: 'Am√©rico',
    role: 'Barbero / Mano derecha',
    image: '/team-americo.jpg',
  }
];
---

<section id="equipo" class="py-20 bg-black/30">
  <div class="container-custom">
    <div class="mb-16 text-center">
      <h2 class="font-serif text-3xl text-zinc-100 md:text-4xl">El Equipo</h2>
      <div class="mx-auto mt-2 h-1 w-20 bg-gold"></div>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 md:gap-12 max-w-4xl mx-auto">
      {members.map((member) => (
        <div class="group">
          <!-- Image Container - Strict 3/4 aspect ratio with object-top alignment to preserve heads -->
          <div class="relative overflow-hidden aspect-[3/4] bg-zinc-800 mb-6">
            <img
              src={member.image}
              alt={member.name}
              class="h-full w-full object-cover object-top transition-transform duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/80 to-transparent opacity-60"></div>
          </div>
          
          <div class="text-center">
            <h3 class="font-serif text-2xl text-zinc-100 mb-1">{member.name}</h3>
            <p class="text-xs font-bold uppercase tracking-widest text-gold opacity-90">{member.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
