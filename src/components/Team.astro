---
// src/components/Team.astro - Team section highlighting Diego and Americo.
const { setmoreUrl } = Astro.props;

const members = [
  {
    name: 'Diego',
    role: 'Fundador / Barbero',
    bio: 'El ojo detrás del estilo Catrines. Cortes con carácter y acabados limpios, sin prisa y con precisión.',
    badges: ['Corte clásico y moderno', 'Detalle con tijera', 'Atención directa'],
    image: '/team-diego.jpg',
    alt: 'Diego — Fundador / Barbero en Catrines Barbería',
    position: '50% 25%'
  },
  {
    name: 'Américo',
    role: 'Barbero / Mano derecha',
    bio: 'Ritmo firme y manos seguras. Desvanecidos pulidos, barba con forma y consistencia en cada cita.',
    badges: ['Desvanecidos limpios', 'Perfilado de barba', 'Consistencia'],
    image: '/team-americo.jpg',
    alt: 'Américo — Barbero / Mano derecha en Catrines Barbería',
    position: '50% 20%'
  }
];
---

<section id="equipo" class="section">
  <div class="container space-y-8">
    <div class="space-y-2">
      <h2 class="font-heading text-3xl uppercase tracking-[0.2em]">El equipo</h2>
      <p class="text-ash">Dos manos, un estándar: detalle, limpieza y trato directo.</p>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
      {members.map((member, index) => (
        <article class="card flex flex-col gap-5 reveal" style={`animation-delay: ${index * 0.1}s;`}>
          <div class="relative overflow-hidden border border-gold/20 bg-[linear-gradient(135deg,_rgba(11,11,11,0.85),_rgba(27,27,27,0.9))] aspect-[16/9] md:aspect-[3/2]">
            <img
              src={member.image}
              alt={member.alt}
              width="1200"
              height="800"
              class="h-full w-full object-cover"
              loading="lazy"
              decoding="async"
              style={`object-position: ${member.position};`}
            />
            <div class="pointer-events-none absolute inset-0 bg-[linear-gradient(180deg,_rgba(11,11,11,0.35),_rgba(11,11,11,0.0)_45%,_rgba(11,11,11,0.35))]"></div>
            <div class="pointer-events-none absolute inset-0 flex items-center justify-center text-xs uppercase tracking-[0.4em] text-goldLight opacity-40">
              Foto
            </div>
          </div>

          <div class="space-y-3">
            <div>
              <h3 class="text-xl font-semibold text-bone">{member.name}</h3>
              <p class="text-xs uppercase tracking-[0.3em] text-goldLight">{member.role}</p>
            </div>
            <p class="text-sm text-ash">{member.bio}</p>
            <div class="flex flex-wrap gap-2">
              {member.badges.map((badge) => (
                <span class="chip text-[0.6rem]">{badge}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="flex flex-col gap-3 border border-gold/20 bg-coal/70 p-5 sm:flex-row sm:items-center sm:justify-between">
      <p class="text-sm uppercase tracking-[0.2em] text-ash">Agenda con el equipo</p>
      <a class="btn btn-primary text-xs" href={setmoreUrl} target="_blank" rel="noreferrer">Agendar en Setmore</a>
    </div>
  </div>
</section>
