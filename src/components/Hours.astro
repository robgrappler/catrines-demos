---
// src/components/Hours.astro - Hours table listing weekly schedule.
const hours = [
  { day: 'Domingo', time: '11:00–17:00' },
  { day: 'Lunes', time: '11:00–20:00' },
  { day: 'Martes', time: 'Cerrado' },
  { day: 'Miércoles', time: '11:00–20:00' },
  { day: 'Jueves', time: '11:00–20:00' },
  { day: 'Viernes', time: '11:00–20:00' },
  { day: 'Sábado', time: '09:00–18:00' }
];
---

<section id="horarios" class="section bg-ember/60">
  <div class="container space-y-6">
    <div class="space-y-2">
      <div class="inline-flex items-center border border-gold/30 bg-bone px-3 py-2">
        <img
          src="/brand/catrines-icon-black.png"
          alt="Catrines Barbería Tradicional"
          class="h-7 w-auto"
          loading="lazy"
        />
      </div>
      <h2 class="font-heading text-3xl uppercase tracking-[0.2em]">Horarios</h2>
      <p class="text-ash">Te esperamos con calma y puntualidad.</p>
    </div>

    <div class="overflow-hidden border border-gold/20">
      <table class="w-full text-left text-sm">
        <tbody>
          {hours.map((entry) => (
            <tr class="border-b border-gold/10 last:border-b-0">
              <td class="px-4 py-3 uppercase tracking-[0.2em] text-ash">{entry.day}</td>
              <td class="px-4 py-3 text-bone">{entry.time}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>
