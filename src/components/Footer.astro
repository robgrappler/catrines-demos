---
// src/components/Footer.astro
const { setmoreUrl, phoneDisplay, phoneLink, instagramHandle, whatsappLink } =
  Astro.props;
---

<footer class="bg-zinc-950 border-t border-white/5 pt-20 pb-24 md:pb-10">
  <div class="container-custom">
    <div
      class="flex flex-col md:flex-row justify-between items-start gap-12 mb-16"
    >
      <!-- Brand Column -->
      <div class="space-y-6 max-w-sm">
        <img
          src="/brand/catrines-wordmark-white.png"
          alt="Catrines Barbería Tradicional"
          class="h-6 w-auto opacity-90"
          loading="lazy"
        />
        <p class="text-zinc-500 text-sm leading-relaxed">
          Respetando la tradición de la barbería clásica. <br />
          Un espacio para caballeros en Monterrey, N.L.
        </p>
      </div>

      <!-- Links Column -->
      <div class="flex gap-16">
        <div class="space-y-4">
          <h3 class="text-xs font-bold uppercase tracking-widest text-gold">
            Contacto
          </h3>
          <nav class="flex flex-col gap-3">
            <a
              href={phoneLink}
              class="text-sm text-zinc-400 hover:text-white transition-colors"
            >
              {phoneDisplay}
            </a>
            <a
              href={whatsappLink}
              target="_blank"
              class="text-sm text-zinc-400 hover:text-white transition-colors"
            >
              WhatsApp
            </a>
            <a
              href={setmoreUrl}
              target="_blank"
              class="text-sm text-zinc-400 hover:text-white transition-colors"
            >
              Agendar Cita
            </a>
          </nav>
        </div>

        <div class="space-y-4">
          <h3 class="text-xs font-bold uppercase tracking-widest text-gold">
            Social
          </h3>
          <nav class="flex flex-col gap-3">
            <a
              href="https://instagram.com/barberia.catrines"
              target="_blank"
              class="text-sm text-zinc-400 hover:text-white transition-colors"
            >
              Instagram
            </a>
            <a
              href="https://facebook.com"
              target="_blank"
              class="text-sm text-zinc-400 hover:text-white transition-colors"
            >
              Facebook
            </a>
          </nav>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-white/5 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-xs text-zinc-600 uppercase tracking-wider">
        &copy; {new Date().getFullYear()} Catrines Barbería. Todos los derechos reservados.
      </p>
      <p class="text-xs text-zinc-700">
        Diseño Demo por <span class="text-zinc-500"
          >JAVER Website Managing Solutions</span
        >
      </p>
    </div>
  </div>
</footer>
