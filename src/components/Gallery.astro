---
// src/components/Gallery.astro
const galleryImages = [
  { src: '/instagram/catrines-1.webp', alt: 'Corte tradicional' },
  { src: '/instagram/catrines-2.webp', alt: 'Detalle de barbería' },
  { src: '/instagram/catrines-3.webp', alt: 'Ambiente Catrines' },
  { src: '/instagram/catrines-4.webp', alt: 'Herramientas de trabajo' },
  { src: '/instagram/catrines-5.webp', alt: 'Cliente satisfecho' },
  { src: '/instagram/catrines-6.webp', alt: 'Estilo clásico' },
  // Limit mobile to 6 images, desktop can handle more naturally via grid
];
---

<section id="galeria" class="py-20 bg-zinc-900 border-t border-white/5">
  <div class="container-custom">
    <div class="mb-12 flex flex-col items-center justify-between gap-4 md:flex-row md:items-end">
      <div>
        <h2 class="font-serif text-3xl text-zinc-100 md:text-4xl">Galería</h2>
        <div class="mt-2 h-1 w-20 bg-gold"></div>
      </div>
      <a 
        href="https://instagram.com/barberia.catrines" 
        target="_blank"  
        class="hidden md:block text-sm font-bold uppercase tracking-widest text-zinc-500 hover:text-gold transition-colors"
      >
        @barberia.catrines
      </a>
    </div>

    <!-- Masonry-ish Grid -->
    <div class="grid grid-cols-2 gap-2 md:grid-cols-3 md:gap-4 lg:grid-cols-4">
      {galleryImages.map((img, i) => (
        <a 
          href="https://instagram.com/barberia.catrines"
          target="_blank"
          class={`relative group overflow-hidden bg-zinc-800 focus:outline-none ${i > 5 ? 'hidden lg:block' : ''}`}
        >
          <div class="aspect-square w-full">
            <img 
              src={img.src} 
              alt={img.alt} 
              class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-80 group-hover:opacity-100" 
              loading="lazy"
            />
          </div>
          <!-- Hover Overlay -->
          <div class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 transition-opacity group-hover:opacity-100">
             <span class="text-white text-2xl">
               <!-- Simple Icon or Text -->
               &nearr;
             </span>
          </div>
        </a>
      ))}
    </div>

    <!-- Mobile Instagram Link -->
    <div class="mt-8 text-center md:hidden">
      <a 
        href="https://instagram.com/barberia.catrines" 
        target="_blank" 
        class="text-sm font-bold uppercase tracking-widest text-gold hover:text-white transition-colors"
      >
        Ver más en Instagram &rarr;
      </a>
    </div>
  </div>
</section>
