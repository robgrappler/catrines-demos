---
// src/components/Services.astro
const { setmoreUrl } = Astro.props;
const services = [
  {
    name: "Corte y Barba",
    price: "$370",
    duration: "1 hr",
    description: "Corte y delineado de barba con toalla caliente",
  },
  {
    name: "Corte de Cabello",
    price: "$250",
    duration: "45 min",
    description: "Corte solo con tijera o desvanecido con rasuradora",
  },
  {
    name: "Corte, Limpieza y Mascarilla",
    price: "$330",
    duration: "45 min",
    description: "Ritual rápido para refrescar y cuidar la piel.",
  },
  {
    name: "Corte y masaje anti estrés",
    price: "$280",
    duration: "45 min",
    description: "Corte clásico con masaje para bajar el ritmo.",
  },
  {
    name: "Corte y perfilado de ceja",
    price: "$290",
    duration: "45 min",
    description: "Perfilado limpio para un look más definido.",
  },
  {
    name: "Corte y Barba express",
    price: "$330",
    duration: "45 min",
    description: "Servicio ágil sin perder detalle en el acabado.",
  },
  {
    name: "Delineado de barba",
    price: "$200",
    duration: "30 min",
    description: "Perfila la barba con precisión y toalla caliente.",
  },
  {
    name: "Cera oídos/nariz",
    price: "$100",
    duration: "1 hr",
    description: "Limpieza precisa para un acabado prolijo.",
  },
  {
    name: "Corte y limpieza facial",
    price: "$290",
    duration: "45 min",
    description: "Corte con limpieza facial para renovar el look.",
  },
];
---

<section id="servicios" class="py-20 bg-zinc-900 border-t border-white/5">
  <div class="container-custom">
    <div class="mb-12 text-center md:text-left">
      <h2 class="font-serif text-3xl text-zinc-100 md:text-4xl text-center">
        Servicios
      </h2>
      <div class="mx-auto mt-2 h-1 w-20 bg-gold md:mx-auto"></div>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        services.map((service) => (
          <a
            href={setmoreUrl}
            target="_blank"
            rel="noreferrer"
            class="group block bg-white/5 p-6 transition-colors hover:bg-white/10 border border-transparent hover:border-gold/20"
          >
            <div class="mb-2 flex items-baseline justify-between">
              <h3 class="font-serif text-xl text-zinc-200 group-hover:text-gold transition-colors">
                {service.name}
              </h3>
              <span class="font-sans text-lg font-bold text-gold">
                {service.price}
              </span>
            </div>
            <p class="mb-3 text-xs uppercase tracking-widest text-zinc-500">
              {service.duration}
            </p>
            <p class="text-sm leading-relaxed text-zinc-400">
              {service.description}
            </p>
          </a>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href={setmoreUrl}
        target="_blank"
        rel="noreferrer"
        class="text-sm font-bold uppercase tracking-widest text-gold hover:text-white transition-colors border-b border-gold pb-0.5 hover:border-white"
      >
        Ver menú completo en Setmore &rarr;
      </a>
    </div>
  </div>
</section>
