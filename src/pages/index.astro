---
// src/pages/index.astro - Single-page site for Alvarez Barber.
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Team from "../components/Team.astro";
import Gallery from "../components/Gallery.astro";
import Location from "../components/Location.astro";
import Hours from "../components/Hours.astro";
import Footer from "../components/Footer.astro";

const setmoreUrl = "https://catrines.setmore.com/";
const phoneDisplay = "+52 81 2401 1787";
const phoneLink = "tel:+528124011787";
const whatsappLink = "https://wa.me/528124011787";
const instagramHandle = "@alvarezbarber";

const locations = [
  {
    label: "Santa Teresita",
    address: "Calle Juan Álvarez 1638-A, Guadalajara, Jal.",
    mapsLink:
      "https://www.google.com/maps/search/?api=1&query=Calle+Juan+%C3%81lvarez+1638-A%2C+Guadalajara%2C+Jal.",
  },
];

const mapEmbedUrl =
  "https://www.google.com/maps/embed/v1/place?key=REPLACE_ME&q=Calle+Juan+%C3%81lvarez+1638-A%2C+Guadalajara%2C+Jal.";
// Note: Using a simplified URL for now as I don't have an API key, fallback to a search URL if it supports embed
const mapEmbedUrlSearch =
  "https://maps.google.com/maps?q=Calle%20Juan%20%C3%81lvarez%201638-A%2C%20Guadalajara%2C%20Jal.&t=&z=14&ie=UTF8&iwloc=&output=embed";

const socialImageURL = "https://alvarezbarber.netlify.app/og-catrines.png";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Alvarez Barber | Guadalajara, Jal</title>
    <meta
      name="description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Calle Juan Álvarez 1638-A, Santa Teresita, Guadalajara, Jal."
    />
    <meta property="og:title" content="Alvarez Barber | Guadalajara, Jal" />
    <meta
      property="og:description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Calle Juan Álvarez 1638-A, Santa Teresita, Guadalajara, Jal."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://alvarezbarber.netlify.app/" />
    <meta property="og:locale" content="es_MX" />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:secure_url" content={socialImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />

    <!-- Schema.org for WhatsApp -->
    <meta itemprop="name" content="Alvarez Barber | Guadalajara, Jal" />
    <meta
      itemprop="description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Calle Juan Álvarez 1638-A, Santa Teresita, Guadalajara, Jal."
    />
    <meta itemprop="image" content={socialImageURL} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="theme-color" content="#0b0b0b" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body id="top">
    <Header setmoreUrl={setmoreUrl} />
    <main class="pb-24">
      <Hero setmoreUrl={setmoreUrl} phoneLink={phoneLink} />
      <Services setmoreUrl={setmoreUrl} />
      <Team setmoreUrl={setmoreUrl} />
      <Gallery />
      <Location
        locations={locations}
        whatsappLink={whatsappLink}
        mapEmbedUrl={mapEmbedUrlSearch}
      />
      <Hours />
    </main>
    <Footer
      setmoreUrl={setmoreUrl}
      phoneDisplay={phoneDisplay}
      phoneLink={phoneLink}
      instagramHandle={instagramHandle}
      whatsappLink={whatsappLink}
    />
  </body>
</html>
