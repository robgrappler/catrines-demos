---
// src/pages/index.astro
import "../styles/global.css";

// Components
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Team from "../components/Team.astro";
import Gallery from "../components/Gallery.astro";
import Location from "../components/Location.astro";
import Footer from "../components/Footer.astro";

// Data
const setmoreUrl = "#";
const instagramHandle = "@barberia.demo";
const address = "Av. Principal #123, Ciudad, Estado";
const mapsLink = "#";
const mapEmbedUrl =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3596.5!2d-100.3!3d25.6!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjXCsDM2JzAwLjAiTiAxMDDCsDE4JzAwLjAiVw!5e0!3m2!1sen!2smx!4v1234567890";

// SEO Image
const socialImageURL = new URL("/catrines-og.png", Astro.site);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Nombre de la Barbería | Tu Ciudad</title>
    <meta
      name="description"
      content="Cortes de cabello clásicos y modernos, rituales de cuidado y estilo tradicional para el caballero moderno."
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social -->
    <meta property="og:title" content="Nombre de la Barbería" />
    <meta
      property="og:description"
      content="Cortes de cabello clásicos y modernos, rituales de cuidado y estilo tradicional."
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={socialImageURL} />
    <meta name="theme-color" content="#18181b" />
    <!-- zinc-900 -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="bg-zinc-900 text-zinc-100 antialiased selection:bg-gold selection:text-zinc-900"
  >
    <Header setmoreUrl={setmoreUrl} />

    <main>
      <Hero setmoreUrl={setmoreUrl} />
      <Services setmoreUrl={setmoreUrl} />
      <Team setmoreUrl={setmoreUrl} />
      <Gallery />
      <Location
        address={address}
        mapsLink={mapsLink}
        mapEmbedUrl={mapEmbedUrl}
      />
    </main>

    <Footer setmoreUrl={setmoreUrl} instagramHandle={instagramHandle} />

    <!-- Fixed Mobile Bottom Bar -->
    <div
      class="fixed bottom-0 left-0 z-40 w-full border-t border-white/10 bg-zinc-900/95 backdrop-blur-lg p-4 md:hidden"
    >
      <div class="grid grid-cols-1">
        <a
          href={setmoreUrl}
          target="_blank"
          rel="noreferrer"
          class="flex items-center justify-center rounded-none bg-gold py-4 text-xs font-bold uppercase tracking-widest text-zinc-900 shadow-lg"
        >
          Agendar
        </a>
      </div>
    </div>
  </body>
</html>
