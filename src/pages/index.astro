---
// src/pages/index.astro - Single-page site for Alvarez Barber.
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Team from "../components/Team.astro";
import Gallery from "../components/Gallery.astro";
import Location from "../components/Location.astro";
import Hours from "../components/Hours.astro";
import Footer from "../components/Footer.astro";

const setmoreUrl = "https://catrines.setmore.com/";
const phoneDisplay = "+52 81 2401 1787";
const phoneLink = "tel:+528124011787";
const whatsappLink = "https://wa.me/528124011787";
const instagramHandle = "@alvarezbarber";

const locations = [
  {
    label: "Andrés Terán 412",
    address: "Andrés Terán 412, Monterrey, N.L.",
    mapsLink:
      "https://www.google.com/maps/search/?api=1&query=Andr%C3%A9s%20Ter%C3%A1n%20412%2C%20Monterrey%2C%20N.L.",
  },
  {
    label: "Francisco Zarco 1151",
    address: "Francisco Zarco 1151, Monterrey, N.L.",
    mapsLink:
      "https://www.google.com/maps/search/?api=1&query=Francisco%20Zarco%201151%2C%20Monterrey%2C%20N.L.",
  },
];

const mapEmbedUrl =
  "https://maps.google.com/maps?q=Andr%C3%A9s%20Ter%C3%A1n%20412%2C%20Monterrey%2C%20N.L.&t=&z=14&ie=UTF8&iwloc=&output=embed";

const socialImageURL = "https://alvarezbarber.netlify.app/og-catrines.png";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Alvarez Barber | Monterrey, NL</title>
    <meta
      name="description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Andrés Terán 412 o Francisco Zarco 1151, Monterrey, N.L."
    />
    <meta property="og:title" content="Alvarez Barber | Monterrey, NL" />
    <meta
      property="og:description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Andrés Terán 412 o Francisco Zarco 1151, Monterrey, N.L."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://alvarezbarber.netlify.app/" />
    <meta property="og:locale" content="es_MX" />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:secure_url" content={socialImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />

    <!-- Schema.org for WhatsApp -->
    <meta itemprop="name" content="Alvarez Barber | Monterrey, NL" />
    <meta
      itemprop="description"
      content="Cortes clásicos y modernos, barba con toalla caliente y rituales de cuidado en Alvarez Barber. Visítanos en Andrés Terán 412 o Francisco Zarco 1151, Monterrey, N.L."
    />
    <meta itemprop="image" content={socialImageURL} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="theme-color" content="#0b0b0b" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body id="top">
    <Header setmoreUrl={setmoreUrl} />
    <main class="pb-24">
      <Hero setmoreUrl={setmoreUrl} phoneLink={phoneLink} />
      <Services setmoreUrl={setmoreUrl} />
      <Team setmoreUrl={setmoreUrl} />
      <Gallery />
      <Location
        locations={locations}
        whatsappLink={whatsappLink}
        mapEmbedUrl={mapEmbedUrl}
      />
      <Hours />
    </main>
    <Footer
      setmoreUrl={setmoreUrl}
      phoneDisplay={phoneDisplay}
      phoneLink={phoneLink}
      instagramHandle={instagramHandle}
      whatsappLink={whatsappLink}
    />
  </body>
</html>
